# appearance
# INFO: If you want to use my theme, make sure you have it. And uncomment the theme line.
theme = tunakai
# custom-shader = shaders/bloom.glsl
# Backup theme:
# theme = GruvboxDarkHard
font-family = JetBrains Mono

# setting
macos-titlebar-style = hidden
quit-after-last-window-closed = true
copy-on-select = true

# cursor
shell-integration-features = no-cursor
cursor-style = block
cursor-style-blink = true
mouse-hide-while-typing = true

# window
window-padding-x = 10
window-padding-y = 5

# background
background = #000000
background-opacity = 0.40
background-blur-radius = 5

# icon
macos-icon = custom-style
macos-icon-frame = chrome

# keybinds

# reload config
keybind = super+r=reload_config


# (other than macos)
# ctrl c copies to clipboard if possible else sends ctrl c to terminal
keybind = performable:ctrl+c=copy_to_clipboard

# quick terminal
keybind = global:cmd+s=toggle_quick_terminal
